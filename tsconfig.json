{
  "compilerOptions": {
    "sourceMap": true,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es5",
    "lib": ["es6", "dom"],
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "noErrorTruncation": true,
    "strict": true // Never set this rule to false. Setting strict to false basically turns off any type check and we could not use TS at all.
  },
  "include": ["./src/**/*.ts", "./src/**/*.tsx", "./src/**/*.js"],
  "exclude": ["./dist"]
}
